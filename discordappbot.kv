
Gerenciador:
    Login:

<Login@Screen>
    name: 'login'
    BoxLayout:
        canvas:
            Color: 
                rgba: 0.6,0.17,0.6,0.8
            Rectangle:
                size: self.size
                pos: self.pos
       

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            Logo:
            Espacamento:
            TokenInput:
            BottonOk:
            Widget:




<Espacamento@Widget>
    size_hint_y: None
    height: '30dp'
 
<Logo@Image>:
    source: 'logo.png'
    size_hint: (None, None)
    size: (120, 120)
    pos_hint: {"center_x":.5, "center_y": .5}
    padding: '20dp'
<TokenInput@TextInput>
    size_hint_y: None
    height: 25
    font_size: 10
    multiline: False

<BottonOk@BoxLayout>
    size_hint_y: None
    height: 40
    Widget:
    Button:
        size_hint_x: None
        width: 120
        text: 'OK'
        on_press: 
            print('Hello World')
    BoxLayout:
        size_hint_x: None
        width: 120
        CheckBox:
            size_hint_x: None
            width: 20
        Label:
            size_hint_x: None
            width: '80dp'
            text:'Lembrar Token'
            font_size: 10